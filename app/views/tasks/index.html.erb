<h1>Tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.name, task_path(task) %>: <%= task.details%> completed:<%= task.completed%> </li>

    <%= link_to "edit", edit_task_path(task) %>

    <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

  <% end %>
</ul>


<%= link_to "New", new_task_path  %>
